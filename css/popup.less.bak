@headerbar_color: #00547A;
@default_width: 380px;

.rounded(@radius: 5px){
    border-color: black;
    -moz-border-radius: @radius;
    -webkit-border-radius: @radius;
    boder-radius: @radius;
}

html {
    min-height: 600px;
    width: 100%;
}
body {
    min-width: @default_width;
    font-family: Verdana, Helvetica, Arial;
    font-size: 11px;
}

div .headerbar {
    background-color: @headerbar_color;
    height: 20px;
    color: white;
    width: @default_width;
    border: 1px solid black;
}

div .topbar {
    background-color: #E9E9E9;
    height: 80px;
    border: 1px solid red;
    width: @default_width;
}

.leftaccountinfo {
    float: left;
    border: 1px solid;
    height: 80px;
    display: inline-block;
    width: 49%;
}

#avi {
    float: left;
}

div #user {
    float: left;
    width: 100px;
    ul {
        list-style-type: none;
        padding-left: 2px;
        text-align: left;
    }
}

div .rightaccountinfo {
    float: left;
    border: 1px solid;
    height: 80px;
    width: 49%;
    ul {
        list-style-type: none;
        padding-left: 2px;
        text-align: left;
    }
}

div .timeline {
    background-color: white;
    width: @default_width;
    ul {
        list-style-type: none;
        padding-Left: 2px;
        text-align: left;
    }
}

div .post {
    border: 1px solid;
    border-radius: 5px;
    padding: 2px;
}

div .posttop {
    background-color: #E9E9E9;
}

#date {
    font-size: 7px;
}