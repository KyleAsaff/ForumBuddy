{
    "name": "Forum Buddy",
    "version": "1.3.1.1",
    "manifest_version": 2,
    "description": "A buddy for forums",
    "icons": {
        "16": "icons/icon2_16.png",
        "48": "icons/icon2_48.png",
        "128": "icons/icon2_128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "src/bg/background.html",
        "persistent": true
    },
    "options_page": "src/options/index.html",
    "browser_action": {
        "default_icon": "icons/icon2_19.png",
        "default_title": "Forum Buddy",
        "default_popup": "src/browser_action/popup.html"
    },
    "content_scripts": [{
        "js": ["js/jquery-1.11.1.js", "js/data.js", "content_script.js"],
        "css": ["css/forumbuddy.css"],
        "matches": ["http://forum.bodybuilding.com/*", "https://forum.bodybuilding.com/*"]
    }],
    "permissions": [
        "<all_urls>",
        "cookies",
        "storage",
        "unlimitedStorage",
        "notifications",
        "clipboardWrite"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",
    "web_accessible_resources": ["icons/*"]
}