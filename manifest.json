{
    "name": "Forum Buddy",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "A buddy for forums",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "src/bg/background.html",
        "persistent": false
    },
    "options_page": "src/options/index.html",
    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "Forum Buddy",
        "default_popup": ""
    },
    "permissions": [
        "cookies",
        "history",
        "http://forum.bodybuilding.com/*",
        "storage",
        "unlimitedStorage",
        "clipboardWrite",
        "notifications",
        "<all_urls>",
        "clipboardWrite"
    ],
    "devtools_page": "devtools/devtools.html"
}